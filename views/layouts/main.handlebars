<!DOCTYPE html>
<html lang="en" class="no-js">
  <!-- Head -->
  <head>
      
    <title>Consumer Affairs App - {{title}}</title>

    <!-- Meta -->
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <!-- Favicon -->
    <link rel="shortcut icon" href="fav.png" type="image/x-icon">

    <!-- Web Fonts -->
    <link href="fonts.css" rel="stylesheet">

    <!-- Bootstrap Styles -->
    <link rel="stylesheet" type="text/css" href="assets/vendors/bootstrap/css/bootstrap.min.css">

    <!-- Components Vendor Styles -->
    <link rel="stylesheet" type="text/css" href="assets/vendors/font-awesome/css/fontawesome-all.min.css">

    <!-- Theme Styles -->
    <link rel="stylesheet" type="text/css" href="assets/css/styles.css">
    <!-- End Demo Custome Code (demo page only) -->
  </head>
  <!-- End Head -->

  <body id="js-home">
    <!-- Header -->
    <header role="header">
      <!-- Navbar -->
      <nav class="js-navbar-scroll navbar fixed-top navbar-expand-lg navbar-transparent navbar-dark">
        <div class="container-fluid">
               <a class="navbar-brand" href="/">
            <img src="resers-logo.png" alt="Reser's Logo" style="width: 80px;">
            </a>

          <button class="navbar-toggler" type="button"
                  data-toggle="collapse"
                  data-target="#navbarTogglerDemo"

                  aria-controls="navbarTogglerDemo"
                  aria-expanded="false"
                  aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarTogglerDemo">
            <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
              <li class="nav-item mr-4 mb-2 mb-lg-0">
                <a href="/#cont" class="nav-link">
                  <i class="fa fa-search mr-1"></i> Search
                </a>
              </li>
              <li class="nav-item mr-4 mb-2 mb-lg-0">
                <a class="nav-link" href="reports#cont">
                  <i class="fa fa-folder-open mr-1"></i> Weekly Reports
                </a>
              </li>
              <li class="nav-item mr-4 mb-2 mb-lg-0">
                <a class="nav-link" href="queries#cont">
                  <i class="fa fa-database mr-1"></i> Queries
                </a>
              </li>
            </ul>
            <div>
              <a class="btn btn-primary" href="create#cont">
                <i class="fa fa-plus mr-1"></i> New Record
              </a>
            </div>
          </div>
        </div>
      </nav>
      <!-- End Navbar -->

      <!-- Promo Block -->
      <section id="bk" class="js-parallax u-promo-block u-promo-block--mheight-450 u-overlay u-overlay--text-white" style="background-image: url(potatoes.jpg);">
        <!-- Promo Content -->
        <div class="container text-white u-ver-center u-content-space">
          <div class="row justify-content-center">
            <div class="col-12">
              <div class="text-left">
                <p class="h4 text-uppercase u-letter-spacing-sm mb-0">Consumer Affairs Application</p>
                  <h1 class="display-2 display-md-1 u-font-accent font-weight-light">{{title}}</h1>
              </div>
            </div>
          </div>
        </div>
        <!-- End Promo Content -->
      </section>
      <!-- End Promo Block -->
    </header>
    <!-- End Header -->
 <br id="cont"> 
      <br><br>
      <section class="u-content-space-bottom">
        <div class="container">
            {{{body}}}
        </div>
      </section>
    </body>

    <!-- Footer -->
    <footer class="bg-dark u-content-space-top pb-3" role="footer">
      <div class="container-fluid">
          <!-- Social Sharing -->
          <div class="text-center">
          <h2 class="h5 font-weight-light text-white mb-0">Logged in as {{username}} on {{fullyear}}.</h2>

          </div>
          <!-- End Social Sharing -->


        <!-- Copyright and Social Icons -->
        <div class="row px-md-3">
          <div class="col-md-8 text-center text-md-left mb-3 mb-md-0">
            <small class="text-white">&copy; {{copyright}} <a class="text-white">Reser's Fine Foods</a>. All Rights Reserved.</small>
          </div>

          <div class="col-md-4 align-self-center">
            <ul class="list-inline text-center text-md-right mb-0">
   <a href="https://www.resers.com/"><img src="/resers-logo.png" width="72"></a>
            </ul>
          </div>
        </div>
        <!-- End Copyright and Social Icons -->
      </div>
    </footer>
    <!-- End Footer -->

    <!-- JAVASCRIPTS (Load javascripts at bottom, this will reduce page load time) -->
    <!-- Global Vendor -->
    <script src="assets/vendors/jquery.min.js"></script>
    <script src="assets/vendors/jquery.migrate.min.js"></script>
    <script src="assets/vendors/popper.min.js"></script>
    <script src="assets/vendors/bootstrap/js/bootstrap.min.js"></script>

    <!-- Components Vendor  -->
    <script src="assets/vendors/magnific-popup/jquery.magnific-popup.min.js"></script>
    <script src="assets/vendors/jquery.parallax.js"></script>

    <!-- Theme Settings and Calls -->
    <script src="assets/js/global.js"></script>

    <!-- Theme Components and Settings -->
    <script src="assets/js/vendors/parallax.js"></script>
</html>